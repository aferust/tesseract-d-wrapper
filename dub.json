{
	"authors": [
		"Ferhat Kurtulmuş"
	],
	"copyright": "Copyright 2019, Ferhat Kurtulmuş",
	"description": "Dlang wrapper to the Tesseract-OCR",
	"license": "boost",
	"name": "tesseractd",
    "version": "0.0.1",
    "importPaths": ["source"],
    "sourcePaths": ["source"],
    "dflags-windows": ["-mtriple=x86_64-windows-msvc"],
    "libs-posix": ["tesseract"],
    "lflags-posix": ["-lstdc++"],
    "libs-windows": [
        "tesseract40d"
    ],
    "configurations": [
        {
            "name": "library",
            "targetType": "library",
            "sourcePaths": ["source"]
        },
        {
            "name": "import",
            "targetType": "sourceLibrary",
            "sourceFiles-posix": ["libtesseractd.a"],
            "sourceFiles-windows": ["tesseractd.lib"]
        }

    ],
    "copyFiles-posix": [
        "*.a"
    ],
    "copyFiles-windows": [
        "*.lib"
    ]
}
